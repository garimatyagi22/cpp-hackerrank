#include<bits/stdc++.h>
using namespace std;
int main(){
    long int n,i=0,count=0;
    cin>>n;
    long long int a[n];
    int max=a[0];
    for(i=0;i<n;i++){
        cin>>a[i];
        
    }
    for(i=0;i<n;i++){
        if(max<a[i]){
        max=a[i];
        }
    }
    for(i=0;i<n;i++){
        if(max==a[i]){
            count++;
        }
    }
    cout<<count;
}
